{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Game (Debug)",
            "type": "shell",
            "windows": {
                "command": "mingw32-make.exe",
            },
            "linux": {
                "command": "make"
            },
            "args": [
                "game",
                "DEBUG=1"
            ],
            "group": "build"
        },
        {
            "label": "Build Game (Release)",
            "type": "shell",
            "windows": {
                "command": "mingw32-make.exe",
            },
            "linux": {
                "command": "make"
            },
            "args": [
                "game",
                "DEBUG=0"
            ],
            "group": "build"
        },
        {
            "label": "Clean",
            "type": "shell",
            "windows": {
                "command": "mingw32-make.exe",
            },
            "linux": {
                "command": "make"
            },
            "args": [
                "clean"
            ],
            "group": "none"
        }
    ]
}